{
  "name": "git-release-action",
  "version": "1.0.0",
  "description": "Multi-platform release action (GitHub, Gitea, self-hosted Gitea)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package": "npm run build",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns='integration|e2e'",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e --testTimeout=30000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "jest --testPathIgnorePatterns=node_modules",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test:act": "act -W .github/workflows/test.yml --eventpath .github/workflows/.act/event-workflow_call.json",
    "test:act:verbose": "act -W .github/workflows/test.yml --eventpath .github/workflows/.act/event-workflow_call.json -v",
    "test:act:ci": "act -W .github/workflows/ci.yml",
    "test:act:release": "act push --eventpath .github/workflows/.act/event-release.json",
    "lint:act": "act -W .github/workflows/ci.yml -j lint",
    "test:act:ci-branch": "act push --eventpath .github/workflows/.act/event-push-branch.json -W .github/workflows/ci.yml",
    "test:act:ci-tag": "act push --eventpath .github/workflows/.act/event-push-tag.json -W .github/workflows/ci.yml",
    "test:act:ci-pr": "act pull_request --eventpath .github/workflows/.act/event-pull-request.json -W .github/workflows/ci.yml",
    "test:act:release-tag": "act push --eventpath .github/workflows/.act/event-push-tag.json -W .github/workflows/release.yml",
    "test:act:release-dispatch": "act workflow_dispatch --eventpath .github/workflows/.act/event-workflow-dispatch-release.json -W .github/workflows/release.yml",
    "test:act:ci-dispatch": "act workflow_dispatch --eventpath .github/workflows/.act/event-workflow-dispatch-ci.json -W .github/workflows/ci.yml",
    "test:act:test-call": "act workflow_call --eventpath .github/workflows/.act/event-workflow_call.json -W .github/workflows/test.yml",
    "test:act:e2e-call": "act workflow_call --eventpath .github/workflows/.act/event-workflow_call.json -W .github/workflows/e2e-tests.yml"
  },
  "keywords": [
    "github-actions",
    "gitea-actions",
    "release",
    "multi-platform"
  ],
  "author": "LiquidLogicLabs",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
